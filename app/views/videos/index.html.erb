<h1>Listing videos</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Season</th>
      <th>Episode number</th>
      <th>Thumbnail</th>
      <th>Path</th>
      <th>Filename</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @videos.each do |video| %>
      <tr>
        <td><%= video.title %></td>
        <td><%= video.season %></td>
        <td><%= video.episode_number %></td>
        <td><%= video.thumbnail %></td>
        <td><%= video.path %></td>
        <td><%= video.filename %></td>
        <td><%= link_to 'Show', video %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
